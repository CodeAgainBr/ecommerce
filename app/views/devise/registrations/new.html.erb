<h2>Registrar-se</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nome, required: true, autofocus: true %>
    <%= f.input :login, required: true %>
    <%= f.input :email, required: true %>
    <%= f.input :data_nascimento, required: true %>
    <%= f.input :cpf, required: true %>
    <%= f.input :password, required: true %>
    <%= f.input :password_confirmation, required: true %>
  </div>

  <div class="form-actions row px-2">
    <%= link_to "voltar", root_path, class: "btn btn-danger" %>
    <%= f.button :submit, class: "btn btn-success ml-auto" %>
  </div>
<% end %>
