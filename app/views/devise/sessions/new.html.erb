<h2>Entrar</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :login, required: true, autofocus: true, input_html: { autocomplete: "email" } %>
    <%= f.input :password, required: false, input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, label: "Permanecer ativo", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Entrar" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
