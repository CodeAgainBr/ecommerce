<div class="section">
	<div class="row">
		<div id="col-login" class="col-lg-5 col-md-10 mx-auto mt-4">
			<div class="card card-login shadow mt-2">
			  <div class="card-body card-body-login">
			    <h3 class="text-shadow card-title text-uppercase text-center text-white mt-2">Acesse sua conta</h3>
					<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
					  <div class="form-inputs mt-4">
					    <%= f.input :login, required: true, autofocus: true, label_html: {class: "text-white"}, input_html: { autocomplete: "email" } %>
					    <%= f.input :password, required: false, label_html: {class: "text-white"}, input_html: { autocomplete: "current-password" } %>
					  </div>
					  <div class="form-actions mt-4">
					  	<div class="row no-gutters">
					  		<div class="col-8">
						    	<%= f.input :remember_me, label: "Permanecer ativo", label_html: {class: "text-white"}, as: :boolean if devise_mapping.rememberable? %>
						    	<div class="row ml-2">
						    		<div class="col-12">
											<small><%= link_to "Ainda não é cadastrado?", new_registration_path(resource_name), class: "text-white" %></small>
						    		</div>
						    	</div>
					  		</div>
					  		<div class="col-auto ml-auto">
						    	<%= f.button :submit, "Entrar", class: "btn-success" %>
					  		</div>
					  	</div>
					  </div>
					<% end %>
			  </div>
			</div>			
		</div>
	</div>
</div>
<script>
	$(document).ready(function() {
		$('#content').addClass('content-login');
	})
</script>
