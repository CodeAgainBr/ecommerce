<p id="notice"><%= notice %></p>
<section>
  <div class="card bg-white text-danger mt-3 mb-3 px-5 pt-3 pb-1 shadow">
    <div class="card-head">
      <div class="card-title">
        <h1>Categorias</h1>
      </div>
    </div>

    <div class="card-body">
      <table>
        <thead>
          <tr>
            <th>Nome</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @categorias.each do |categoria| %>
            <tr>
              <td><%= categoria.nome %></td>
              <td><%= link_to 'Show', categoria %></td>
              <td><%= link_to 'Edit', edit_categoria_path(categoria) %></td>
              <td><%= link_to 'Destroy', categoria, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <div class="card-footer">
      <%= link_to 'New Categoria', new_categoria_path %>
    </div>
  </div>
</section>
