<%= form_tag("/produtos" , method: "get") do %>
	<% @categoria = Categoria.all %>
	<% @sub_categoria = SubCategoria.all %>

	<%= select_tag :categoria, options_from_collection_for_select(@categoria, :id, :nome), prompt: "Escolha a categoria" %>
	<%= select_tag :sub_categoria, options_from_collection_for_select(@sub_categoria, :id, :nome), prompt: "Escolha a sub categoria" %>

  <%= label_tag(:pesquisa, "Procurar por:") %>
  <%= text_field_tag(:pesquisa) %>
  <%= submit_tag("Procurar") %>
<% end %>